{{#each posts as |post| }}
<a href='javascript: location.href = "post/{{id}}"'>
  <div class="card mb-3">
    <div class="card-header">
        {{title}} <small class="text-muted fs-6">by {{user.name}} <p class="float-end">{{format_date date_created}}</p>
            </small>
    </div>
    <div class="card-body">
        <p>{{content}}</p>
    </div>

    <footer>
        {{#if logged_in}}
        <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
        <button class="btn btn-success"><i class="fas fa-pen"></i></button>
        {{/if}}
    </footer>

</div>  
</a>

{{/each}}